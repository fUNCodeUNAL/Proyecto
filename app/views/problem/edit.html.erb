<div class="form-horizontal dropzone">
  <legend>Editar problema</legend>
  <%= form_for :problem, :method => :PUT, url: problem_update_path do |f| %>
    <div class="form-group" >
      <label class="col-md-4 control-label">ID <%= @problem.id%></label>  
    </div>
    <div class="form-group" >
      <label class="col-md-4 control-label">Nombre</label>  
      <div class="col-md-5">
        <div>
          <%= f.text_field :name, autofocus: true, class: "form-control input-md", placeholder: "name" %>
        </div>
      </div>
    </div>
    <div class="form-group" >
      <label class="col-md-4 control-label">Enunciado del problema</label>  
      <div class="col-md-5">
        <div>
          <%= f.file_field :file, class: "form-control input-md", accept: ".pdf", placeholder: "seleccionar archivo..." %>
        </div>
        <p class="help-block"> Este archivo debe ser el enunciado en formato pdf </p> 
      </div>
    </div>
    <div class="form-group" >
      <label class="col-md-4 control-label">Tiempo l√≠mite</label>  
      <div class="col-md-5">
        <div>
          <%= f.text_field :time_limit, class: "form-control input-md", placeholder: "tiempo en ms" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label">Lenguajes</label>
      <div class="col-md-5">
        <% val = "0" %>
        <% if ( ( @problem.languages>>0 )&1 ) == 1 %>
          <% val = "1" %>
        <% end %>
        <%= check_box_tag(:cpp, value = val, checked = ( val == "1" )) %>
        <%= label_tag(:cpp, "C++") %>
        <% val = "0" %>
        <% if ( ( @problem.languages>>1 )&1 ) == 1 %>
          <% val = "1" %>
        <% end %>
        <%= check_box_tag(:java, value = val, checked = ( val == "1" )) %>
        <%= label_tag(:java, "Java") %>
        <% val = "0" %>
        <% if ( ( @problem.languages>>2 )&1 ) == 1 %>
          <% val = "1" %>
        <% end %>
        <%= check_box_tag(:python, value = val, checked = ( val == "1" )) %>
        <%= label_tag(:python, "Python") %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label"></label>
      <div class="col-md-4">
        <%= f.submit "Editar problema", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>