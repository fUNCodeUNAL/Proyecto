<%
  @error = ""
  @error_class = ""

  def check_error(param)
    if @user.errors.include?(param) 
      @error_class = " has-error"
      @error = "*" + @user.errors.full_messages_for(param)[0]
    else 
      @error = ""
      @error_class = ""
    end
  end
%>

<div class="form-horizontal">
  <legend>Change your password</legend>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%check_error(:password)%>
    <div class="form-group  <%= @error_class %>">
      <label class="col-md-4 control-label">New password</label>
      <div class="col-md-5">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-md", placeholder: "******" %>
        <span class="help-block">At least 6 characters</span>
        <p class="help-block"> <%= @error %></p> 
      </div>
    </div>
    <%check_error(:password_confirmation)%>
    <div class="form-group  <%= @error_class %>">
      <label class="col-md-4 control-label">Confirm new password</label>
      <div class="col-md-5">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-md", placeholder: "******" %>
        <span class="help-block">Confirm your password</span>
        <p class="help-block"> <%= @error %></p> 
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label"></label>
      <div class="col-md-4">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
