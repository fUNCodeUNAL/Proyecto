<div class="form-horizontal">
  <legend>Log in</legend>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% error = check_error(@user.errors, :email) %>
    <div class="form-group <%= error[:error_class] %>" >
      <label class="col-md-4 control-label">Email</label>  
      <div class="col-md-5">
        <div>
          <%= f.email_field :email, autofocus: true, class: "form-control input-md", placeholder: "username@unal.edu.co" %>
        </div>
        <p class="help-block">Insert your university's email</p>
        <p class="help-block"> <%= error[:error_message] %></p> 
      </div>
    </div>
    <% error = check_error(@user.errors, :password) %>
    <div class="form-group  <%= error[:error_class] %>">
      <label class="col-md-4 control-label">Password</label>
      <div class="col-md-5">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-md", placeholder: "******" %>
        <p class="help-block"> <%= error[:error_message] %></p> 
      </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label" for="checkboxes"></label>
        <div class="col-md-4">
          <label>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
            <% end -%>
            Remember me
          </label>
        </div>
      </div>
    <div class="form-group">
      <label class="col-md-4 control-label"></label>
      <div class="col-md-4">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
