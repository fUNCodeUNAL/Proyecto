<%= render "form", title:'Editar', button_text: 'Guardar' %>
<div id="current_problems">
  <%= render "table_problems_in_contest" %> 
</div>
<div>
  <h1> Agregar problemas </h1>
	<%= form_tag problem_search_path, method: 'get', remote: true do %>
    <div class="input-group custom-search-form">
      <%= text_field_tag :search, "", placeholder: 'Buscar...', class: 'form-control' %>
      <%= hidden_field_tag :pageId, value: 0 %>
      <%= hidden_field_tag :contestId, value: @contest.id %>
      <span class="input-group-btn">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            <i class="fa fa-search"></i>
        <% end %>
      </span>
    <% end %>
    </div>
</div>	
<div id= "search_results"></div>